@model Piranha.Areas.Manager.Models.SiteItemModel
@{
    Piranha.Models.SitemapItem item = Model.Item;
    string siteId = Model.SiteId;
    string pageId = Model.PageId;
    int expanded = Model.ExpandedLevels;
    int tabindex = Model.TabIndex + 1;
}

<li class="sitemap-item dd-item @(!item.Published.HasValue ? "unpublished" : "") @(Model.CurrentLevel < Model.ExpandedLevels || (!string.IsNullOrEmpty(pageId) && item.HasChild(new Guid(pageId))) ? "expanded" : "")" data-id="@item.Id">
    <div class="dd-handle">
        @if (item.ParentId == null && item.SortOrder == 0)
        {
            <span class="fas fa-home"></span>
        }
        else
        {
            <span class="fas fa-ellipsis-v"></span>
        }
    </div>
    <div class="dd-toggle @(item.Items.Count == 0 ? "empty" : "")">
        @if (item.Items.Count > 0) {
            <span class="fas fa-plus-circle"></span>
            <span class="fas fa-minus-circle"></span>
        }
    </div>
    @if (!Model.ReadOnly) {
        <div class="actions three float-right">
            @if ((await Authorization.AuthorizeAsync(User, Piranha.Manager.Permission.PagesAdd)).Succeeded) {
                <a class="add-after first pull-left" data-type="" tabindex="@(tabindex++)" href="@Url.Action("AddAt", new { type = "pageType", parentId = item.ParentId, sortOrder = item.SortOrder + 1, siteId = siteId })" data-toggle="tooltip" data-original-title="Add after" data-placement="top">
                    <i class="fas fa-angle-down"></i>
                </a>
                <a class="add-below pull-left" tabindex="@(tabindex++)" href="@Url.Action("AddAt", new { type = "pageType", parentId = item.Id, sortOrder = 0, siteId = siteId })" data-toggle="tooltip" data-original-title="Add below" data-placement="top" data-parentid="@item.Id" data-sortorder="0">
                    <i class="fas fa-angle-right"></i>
                </a>
            }
            @if ((await Authorization.AuthorizeAsync(User, Piranha.Manager.Permission.PagesDelete)).Succeeded) {
                <a class="remove last confirm-delete" tabindex="@(tabindex++)" href="@Url.Action("Delete", new { id = item.Id })" @(item.Items.Count > 0 ? "style=visibility:hidden" : "") data-toggle="tooltip" data-original-title="Delete" data-placement="top" data-message="Are you sure you want to delete the page?">
                    <i class="fas fa-trash"></i>
                </a>
            }
        </div>
    }
    <div class="date float-right">
        @(item.Published.HasValue ? item.Published.Value.ToString("yyyy-MM-dd") : "")
    </div>
    <div class="info float-right">
        @item.PageTypeName
    </div>
    <div class="content">
        @if ((await Authorization.AuthorizeAsync(User, Piranha.Manager.Permission.PagesEdit)).Succeeded) {
            <a href="@Url.Action("Edit", "Page", new { id = item.Id })" tabindex="@Model.TabIndex" data-id="@item.Id" data-title="@(item.NavigationTitle != null ? item.NavigationTitle : item.Title)" data-url="@item.Permalink">@(item.NavigationTitle != null ? item.NavigationTitle : item.Title)</a>
        } else {
            <span class="title">@(item.NavigationTitle != null ? item.NavigationTitle : item.Title)</span>
        }
        @if (item.OriginalPageId.HasValue) {
            <span class="badge badge-warning">Copy</span>
        }
        @if (!item.Published.HasValue) {
            <span class="badge badge-info">Unpublished</span>
        } else if (item.Published.Value > DateTime.Now) {
            <span class="badge badge-info">Scheduled</span>
        }
    </div>
    @if (item.Items.Count > 0) {
        <ol class="dd-list">
            @foreach (var child in item.Items) {
                @Html.Partial("DisplayTemplates/SitemapItem", new Piranha.Areas.Manager.Models.SiteItemModel() {
                    Item = child,
                    PageId = Model.PageId,
                    SiteId = Model.SiteId,
                    ExpandedLevels = Model.ExpandedLevels,
                    CurrentLevel = Model.CurrentLevel + 1
                })
            }
        </ol>
    }
</li>