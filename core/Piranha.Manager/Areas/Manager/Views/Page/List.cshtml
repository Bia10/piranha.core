@model Piranha.Areas.Manager.Models.PageListModel
@{
    ViewBag.Title = "Pages";
    ViewBag.Controller = "Page";
}

@section script {
    <script type="text/javascript">
        $(function () {
            @for (var n = 0; n < Model.PageTypes.Count; n++) {
                <text>
                    manager.pageTypes[@n] = {
                        id: '@Model.PageTypes[n].Id',
                        title: '@Model.PageTypes[n].Title'
                    };
                </text>
            }

            $('.dd').nestable({
            });

            $('.dd').on('change', function (e) {
                // TODO: Show spinner & block sitemap while saving
                $('#sitemap-spinner').show();

                $.ajax({
                    url: '/manager/pages/move',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        Items: $(e.target).nestable("serialize")
                    }),
                    success: function (data) {
                        // TODO: Hide spinner
                        $('#sitemap-spinner').hide();

                        // Update the sitemap
                        $(e.target).find(">ol").html(data);
                    }
                });
            });
        });

        $(document).on('click', '#btn-copy', function (e) {
            e.preventDefault();

            // Show modal
            $('#modalPage').modal('show');
            piranha.page.callback = function (ret) {
                console.log(ret.id);
                window.location.href = '/manager/page/copy/' + ret.id + '/@Model.Sites.First().Id';
            };
        });
    </script>
}

<div class="top">
    <div class="top-nav">
        <nav>
            <ul class="navbar-nav">
                @if (Model.Sites.Count > 1)
                {
                    <li>
                        <div class="btn-group" role="group">
                            <button id="btnSites" tabindex="1" type="button" class="btn btn-sm btn-labeled btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-globe"></i>@Model.SiteTitle
                            </button>
                            <div class="dropdown-menu" aria-labelledby="btnSites">
                                @foreach (var site in Model.Sites)
                                {
                                    <a class="dropdown-item btn-panel-region" href="@Url.Action("ListSite", new { siteId = site.Id })">@site.Title</a>
                                }
                            </div>
                        </div>
                    </li>
                }
                @if ((await Authorization.AuthorizeAsync(User, Piranha.Manager.Permission.PagesAdd)).Succeeded)
                {
                    <li>
                        <div class="btn-group" role="group">
                            <button id="btnPageTypes" tabindex="2" class="btn btn-sm btn-labeled btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-plus"></i>Add
                            </button>
                            <div class="dropdown-menu" aria-labelledby="btnPageTypes">
                                <h6 class="dropdown-header">Empty</h6>
                                @foreach (var type in Model.PageTypes)
                                {
                                    <a class="dropdown-item btn-panel-region" href="@Url.Action("Add", new { type = type.Id, siteId = Model.SiteId })">@type.Title</a>
                                }
                            </div>
                        </div>
                    </li>
                }
            </ul>
        </nav>
    </div>
    <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Content</li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
    </nav>
</div>

@if (!string.IsNullOrWhiteSpace(ViewBag.Message)) {
    <div class="row">
        <div class="col-sm-12">
            <div class="@ViewBag.MessageCss">
                @Html.Raw(ViewBag.Message)
            </div>
        </div>
    </div>
}

<ol class="sitemap header">
    <li>
        <div class="actions three float-right"></div>
        <div class="date float-right">Published</div>
        <div class="info float-right">Page type</div>
        <div class="content">Title</div>
    </li>
</ol>
<div>
    <ol class="sitemap">
        @foreach (var site in Model.Sites)
        {
            <li class="sitemap-item dd-item expanded">
                <div class="dd-handle">
                    <span class="fas fa-globe"></span>
                </div>
                <div class="dd-toggle empty"></div>
                <div class="actions three float-right"></div>
                <div class="content">
                    <a href="@Url.Action("Edit", "Site", new { id = site.Id })">@site.Title</a> <code>(/@site.Slug)</code>
                </div>
                <div class="dd">
                    <ol class="dd-list">
                        @Html.Partial("Partial/_Sitemap", new Piranha.Areas.Manager.Models.SitemapModel
                        {
                            Sitemap = site.Sitemap,
                            SiteId = site.Id,
                            PageId = Model.PageId,
                            ExpandedLevels = Model.ExpandedLevels
                        })
                    </ol>
                </div>
            </li>
        }
    </ol>
    <div id="sitemap-spinner" class="spinner" style="display:none"></div>
</div>
