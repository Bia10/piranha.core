@model Piranha.Areas.Manager.Models.PageEditFieldSet
@using Piranha.Models
@{
    Layout = null;
    var unique = Guid.NewGuid().ToString();
}

<div class="list-group-item">
    <div class="list-group-heading" role="tab" id="heading-@unique">
        <div class="region-tool handle sortable-handle @(Model.NoExpand ? "no-expand" : "")">
            <span class="fas fa-ellipsis-v"></span>
        </div>
        <div class="region-tool actions @(Model.NoExpand ? "no-expand" : "")">
            <button type="button" class="btn btn-sm delete" data-toggle="tooltip" data-original-title="Delete" data-placement="top"><span class="fas fa-trash text-danger"></span></button>
        </div>
        <div class="region-content">
            @if (Model.NoExpand) {
                @Html.Partial("Partial/_PageEditRegionContent", Model)
            } else {
                <a class="region-title" role="button" data-toggle="collapse" href="#region-@unique" aria-expanded="false" aria-controls="region-@unique">
                    @Model.ListTitle
                </a>
            }
        </div>
    </div>
    @if (!Model.NoExpand) {
        <div class="list-group-body collapse" role="tabpanel" id="region-@unique">
            @Html.Partial("Partial/_PageEditRegionContent", Model)
        </div>
    }
</div>
