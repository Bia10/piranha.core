@model Piranha.Extend.Fields.PageField
@{
    var prefix = Html.ViewData.TemplateInfo.HtmlFieldPrefix
        .Replace("[", "_").Replace("]", "_").Replace(".", "_");
    var unique = "Image_" + Guid.NewGuid().ToString();
}

<div class="row">
    <div class="col-xs-9">
        @Html.HiddenFor(m => m.Id)
        <div class="well well-sm">
            <a id="@(unique)_Title" href="#" >@(Model.Page != null ? Model.Page.Title : "")</a>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="btn-group btn-group-justified" role="group">
            <div class="btn-group" role="group" style="padding-right:5px">
                <button class="btn btn-primary btn-block" type="button" data-toggle="modal" data-target="#modalPage" data-pageid="@(prefix)_Id" data-pagetitle="@(unique)_Title">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
            <div class="btn-group" role="group" style="padding-left:5px">
                <button class="btn btn-danger btn-block btn-page-clear" type="button" data-pageid="@(prefix)_Id" data-pagetitle="@(unique)_Title">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    </div>
</div>
