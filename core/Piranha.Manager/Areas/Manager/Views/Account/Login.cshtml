@model string
@{
    var module = Piranha.App.Modules.Get<Piranha.Manager.Module>();

	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

	<title>Login</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600">
    <link rel="stylesheet" href="~/manager/assets/css/style.min.css">
    @foreach (var style in module.Styles)
    {
        <link href="@Url.Content(style)" rel="stylesheet" type="text/css" />
    }
</head>
<body id="login">
	<div class="container">
        @using (var form = Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "main-form", @class = "form", @role = "form" })) {
			<div class="card card-white">
				@Html.AntiForgeryToken()
				<div class="card-body">
					<div class="account-logo"></div>
					<p class="account-banner">
						Piranha CMS
						<small>Version 6.0.0-alpha1</small>
					</p>
				</div>
				<div class="card-body">
					@if (!string.IsNullOrWhiteSpace(ViewBag.Message)) {
						<div class="alert alert-danger" role="alert">
							@Html.Raw(ViewBag.Message)
						</div>
					}
					<div class="form-group">
						@Html.TextBox("UserName", "", new { @class = "form-control", @placeholder = "username" })
					</div>
					<div class="form-group">
						@Html.Password("Password", "", new { @class = "form-control", @placeholder = "password" })
					</div>
					<button type="submit" class="btn btn-primary"><span class="fas fa-check"></span></button>
				</div>
			</div>
		}
	</div>
	<script type="text/javascript">
		// Set focus to the first input field
		document.getElementById('UserName').focus();
	</script>
</body>
</html>
