@model Piranha.Areas.Manager.Models.ModuleListModel
@{
    ViewBag.Title = "Modules";
    ViewBag.Controller = "Module";
}

<h1>@ViewBag.Title</h1>

<table class="table table-main">
    <thead>
        <tr>
            <th class="date"></th>
            <th>Name</th>
            <th>Package URl</th>
            <th class="date text-center">Version</th>
        </tr>
        <tbody>
            @foreach (var author in Model.Modules.Keys)
            {
                @foreach (var module in Model.Modules[author])
                {
                    <tr>
                        <td><img class="img-thumbnail" src="@module.IconUrl"></td>
                        <td class="align-middle">
                            <strong>@module.Name</strong>
                            <span class="text-nooverflow">@module.Description</span>
                        </td class="align-middle">
                        <td class="align-middle"><a class="text-nooverflow" href="@module.PackageURL" target="_blank">@module.PackageURL</a></td>
                        <td class="align-middle text-center">@module.Version</td>
                    </tr>
                }
            }
        </tbody>
    </thead>
</table>
