@model Piranha.Areas.Manager.Models.SiteListModel
@{
    ViewBag.Title = "Sites";
    ViewBag.Controller = "Site";
}

<div class="top-nav">
    <nav>
        <ul class="navbar-nav">
            @if ((await Authorization.AuthorizeAsync(User, Piranha.Manager.Permission.SitesAdd)).Succeeded)
            {
                <li>
                    <a href="@Url.Action("Add")" class="btn btn-sm btn-labeled btn-primary">
                        <i class="fas fa-plus"></i>Add
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Settings</li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>

@if (!string.IsNullOrWhiteSpace(ViewBag.Message))
{
    <div class="row">
        <div class="col-sm-12">
            <div class="@ViewBag.MessageCss">
                @Html.Raw(ViewBag.Message)
            </div>
        </div>
    </div>
}

<table class="table table-main">
    <thead>
        <tr>
            <th>Title</th>
            <th class="date text-center">Default</th>
            <th class="date">Modified</th>
            <th class="date">Created</th>
            <th class="actions one"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var site in Model.Sites) {
            <tr>
                <td class="text-limit-cell">
                    <a href="@Url.Action("Edit", new { id = site.Id})">@site.Title</a>
                </td>
                <td class="text-center">
                    @if (site.IsDefault) {
                        <span class="fas fa-check"></span>
                    }
                </td>
                <td>@site.LastModified.ToString("yyyy-MM-dd")</td>
                <td>@site.Created.ToString("yyyy-MM-dd")</td>
                <td class="actions one">
                    @if (!site.IsDefault) {
                        <a class="remove confirm-delete" href="@Url.Action("Delete", new { id = site.Id })" data-toggle="tooltip" data-original-title="Delete" data-placement="top" data-message="Are you sure you want to delete the site?">
                            <span class="fas fa-trash text-danger"></span>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>