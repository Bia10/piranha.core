@model Piranha.Extend.Blocks.ImageBlock

<div class="row justify-content-center">
    <div class="col">
        <img src="@Url.Content(Model.Body)">
        @if (!string.IsNullOrEmpty(Model.Caption))
        {
            <p class="text-center small mt-2">@Model.Caption</p>
        }
    </div>
</div>